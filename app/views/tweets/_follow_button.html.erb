<% if current_user.id != @users.ids %>
  <div>
    <div>
      <div>
        <% if !current_user.following?(@users) %>
          <%= form_for(current_user.active_relationships.build) do |f| %>
            <div>
              <%= hidden_field_tag :followed_id, @users.ids %>
            </div>
            <%= f.submit "follow", class: "btn btn-primary" %>
          <% end %>
        <% else %>
          <%= form_for(current_user.active_relationships.find_by(followed_id: @users.ids),
            html: { method: :delete }) do |f| %>
            <%= f.submit "unfollow", class: "btn btn-secondary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
