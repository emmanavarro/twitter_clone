<br/>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Profile thumbnail</h5>
      <p>
        <strong>Tweet:</strong>
        <%= @tweet.tweet %>
      </p>

      <%= link_to 'Edit', edit_tweet_path(@tweet) %> |
      <%= link_to 'Back', tweets_path %> |
      <%= link_to 'Delete', tweet_path(@tweet), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
