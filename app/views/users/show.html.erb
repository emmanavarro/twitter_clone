  <%
=begin%>
 <div class="card">
    <div class="card-body">
      <h5 class="card-title">
      <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </h5>
      <p class="card-text">
        <strong><%= current_user.name %></strong><br/>
        <small>@<%= current_user.username %></small>
      </p>
      <% @users.each do |user| %>
        <%= render partial: 'tweets/follow_button', :user => User.find_by_username(params[:id]) %>
      <% end %>
      <div class="container border-top px-0">
        <div class="row justify-content-center">
          <div class="col text-center mt-3 px-2">
            <p>
              <small><b><%= current_user.tweets.count %></b></small>
              <small>Tweets</small>
            </p>
          </div>
          <div class="col mt-3 text-center px-2">
            <p>
              <small><b>10</b></small>
              <small>Following</small>
            </p>
          </div>
          <div class="col mt-3 text-center px-2">
            <p>
              <small><b><%= current_user.followers.count %></b></small>
              <small>Followers</small>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div> 
<%
=end%>
